{% extends 'pages/front/base.html.twig' %}
{% set fullName = app.user.prenom ~ " " ~ app.user.nom %}
{% set imagePorfil = app.user.image ? app.user.image : 'default.png' %}
{% block title %}Dashboard !{% endblock %}

{% block stylesheets %}
    {{parent()}}
    <link href="{{asset('assets/plugins/Tags-Input/dist/jquery.tagsinput-revisited.min.css')}}" rel="stylesheet" type="text/css">

    <!--DateTime Picker-->
    <link href="{{asset('assets/plugins/datetimepicker/jquery.datetimepicker.css')}}"  rel="stylesheet" type="text/css"/>
    <link href="{{asset('assets/front/pages/profil/style.css')}}" rel="stylesheet" type="text/css">
{% endblock %}

{% block main %}
	<div id="content-sidebar-pro">
        
        <div id="content-sidebar-image">
            <img src="{{asset('assets/front/images/demo/movie-detail-poster.jpg')}}" alt="Movie Poster">
        </div>
        
        <div class="content-sidebar-section">
            <h2 class="content-sidebar-sub-header">{{fullName |capitalize }} <a href="{{path('user_parametres')}}" class="link-edit" title="Modifier votre profil"><i class="fas fa-pencil-alt"></i></a></h2>
