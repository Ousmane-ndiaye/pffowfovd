            </ul>
        </div><!-- close .content-sidebar-section -->

		<div class="content-sidebar-section">
            <h4 class="content-sidebar-sub-header">Note</h4>
            <div class="content-sidebar-short-description">
				<em class="fas fa-star golden-star" aria-hidden="true"></em>
				<em class="fas fa-star golden-star" aria-hidden="true"></em>
				<em class="fas fa-star golden-star" aria-hidden="true"></em>
				<em class="fas fa-star gray-star" aria-hidden="true"></em>
				<em class="fas fa-star gray-star" aria-hidden="true"></em>
			</div>
        </div><!-- close .content-sidebar-section -->
        
        <div class="content-sidebar-section">
            <h4 class="content-sidebar-sub-header">Date de naissance</h4>
            <div class="content-sidebar-short-description">{{ app.user.birthday ? app.user.birthday |date('d') ~ app.user.birthday |date('m') |string_month ~ app.user.birthday |date('Y') : '? ? ?' }}</div>
