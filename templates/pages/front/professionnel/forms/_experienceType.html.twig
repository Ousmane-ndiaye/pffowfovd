            <div class="col-md-6">
                <div class="form-group">
                    <label class="custom-control overflow-checkbox">
                        {{ form_widget(formExperience.isCurrent, {'attr': {'class': 'overflow-control-input'}}) }}
                        <span class="overflow-control-indicator"></span>
                        <span class="overflow-control-description">J’occupe actuellement ce poste</span>
                    </label>
                </div>
            </div><!-- close .col -->
        </div><!-- close .row -->
        <div class="row">
