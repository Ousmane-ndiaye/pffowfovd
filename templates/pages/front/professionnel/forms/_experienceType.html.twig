                    <label for="intitulePoste" class="col-form-label required">Intitulé du poste </label>
                    {{ form_widget(formExperience.intitulePoste, {'attr': {'class': 'form-control required', 'placeholder': 'Ex: Directeur'}}) }}
                    <div class="form-field-errors">
                        {{ form_errors(formExperience.intitulePoste) }}
                    </div>
                </div>
            </div><!-- close .col -->
        </div><!-- close .row -->
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="entreprise" class="col-form-label required">Entreprise </label>
                    {{ form_widget(formExperience.entreprise, {'attr': {'class': 'form-control required', 'placeholder': 'Ex: Sonatel'}}) }}
                    <div class="form-field-errors">
                        {{ form_errors(formExperience.entreprise) }}
                    </div>
                </div>
            </div><!-- close .col -->
        </div><!-- close .row -->
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
