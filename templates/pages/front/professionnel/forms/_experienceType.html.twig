                            {{ form_widget(formExperience.anneeDeDebut, {'attr': {'class': 'form-control required'}}) }}
                            <div class="form-field-errors">
                                {{ form_errors(formExperience.anneeDeDebut) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div><!-- close .col -->

            <div class="col-md-6">
                <div class="form-group">
                    <label for="dateDeFin" class="col-form-label required">Date de fin </label>
                    <div class="row">
                        <div class="col-md-12 mb-1">
                            {{ form_widget(formExperience.moisDeFin, {'attr': {'class': 'form-control required'}}) }}
                            <div class="form-field-errors">
                                {{ form_errors(formExperience.moisDeFin) }}
                            </div>
                        </div>
                        <div class="col-md-12">
                            {{ form_widget(formExperience.anneeDeFin, {'attr': {'class': 'form-control required'}}) }}
                            <div class="form-field-errors">
