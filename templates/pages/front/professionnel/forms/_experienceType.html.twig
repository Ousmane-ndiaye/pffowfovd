                    <div class="form-field-errors">
                        {{ form_errors(formExperience.description) }}
                    </div>
                </div>
            </div><!-- close .col -->
        </div><!-- close .row -->
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="competences" class="col-form-label">Compétences </label>
                    {{ form_widget(formExperience.competences, {'attr': {'class': 'form-control'}}) }}
                    <div class="form-field-errors">
                        {{ form_errors(formExperience.competences) }}
                    </div>
                </div>
            </div><!-- close .col -->
        </div><!-- close .row -->
    </div>
